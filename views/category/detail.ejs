<%- include('../partials/header'); %>

<body class="container">
<%- include('../partials/aside') %>
    <main class="content">
        <h1>Détail de la catégorie</h1>
        <form action="#" method="post">
            <div class="field">
                <label class="label">Nom</label>
                <div class="control">
                    <input class="input" name="name" type="text" placeholder="Nom de la catégorie" value="<%= category.name %>" disabled>
                </div>
            </div>
            <%- include('../components/btn_form', {domain: 'categories', element: category}) %>
        </form>
    </main>
    <div class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div class="box">
                <p>Voulez-vous vraiment supprimer?</p>
                <a href="#" class="button is-danger">Supprimer</a>
                <button class="button is-info">Annuler</button>
            </div>
        </div>
    </div>
    <script src="/js/deleteAction.js"></script>
</body>
</html>