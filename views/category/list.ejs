<%- include('../partials/header'); %>

<body class="container">
    <aside>
        <a href="/admin">Home</a>
        Catégories
    </aside>
    <main class="content">
        <h1>Liste des catégories</h1>
        <%- include('../components/btn_link', {link: `categories/create`, title: 'Ajouter une nouvelle catégorie', icon: 'mdi-new-box', className: 'is-info'}); %>
        <table class="table">
            <thead>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% for(const category of categories) { %>
                <tr>
                    <th><%= category.id %></th>
                    <td><%= category.name %></td>
                    <td>
                        <%- include('../components/btn_link', {link: `categories/${category.id}/detail`, title: 'Voir le détail', icon: 'mdi-eye-outline', className: 'is-info'}); %> 

                        <%- include('../components/btn_link', {link: `categories/${category.id}/edit`, title: 'Editer', icon: 'mdi-pencil', className: 'is-success'}); %>

                        <%- include('../components/btn_link', {link: `categories/${category.id}/delete`, title: 'Supprimer', icon: 'mdi-delete', className: 'is-danger'}); %>   
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </main>
</body>
</html>
