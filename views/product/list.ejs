<%- include('../partials/header'); %>

<body class="container">
    <aside>
        <a href="/admin">Home</a>
        Produits
    </aside>
    <main class="content">
        <h1>Liste des produits</h1>
        <%- include('../components/btn_link', {link: `products/create`, title: 'Ajouter un nouveau produit', icon: 'mdi-new-box', className: 'is-info'}); %>
        <table class="table">
            <thead>
                <th>Id</th>
                <th>Nom</th>
                <th>Disponibilité</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% for(const product of products) { %>
                <tr>
                    <th><%= product.id %></th>
                    <td><%= product.name %></td>
                    <td><% if(product.isAvailable) { %> Disponible <% } else { %> Non disponible  <% } %></td>
                    <td>
                        <%- include('../components/btn_link', {link: `products/${product.id}/detail`, title: 'Voir le détail', icon: 'mdi-eye-outline', className: 'is-info'}); %> 

                        <%- include('../components/btn_link', {link: `products/${product.id}/edit`, title: 'Editer', icon: 'mdi-pencil', className: 'is-success'}); %>

                        <%- include('../components/btn_link', {link: `products/${product.id}/delete`, title: 'Supprimer', icon: 'mdi-delete', className: 'is-danger'}); %>
                        
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </main>
</body>
</html>