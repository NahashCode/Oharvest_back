<%- include('../partials/header'); %>

<body class="container">
    <%- include('../partials/aside') %>
    <main class="content">
        <h1>Liste des produits</h1>
        <%- include('../components/btn_link', {link: `products/create`, title: 'Ajouter un nouveau produit', icon: 'mdi-new-box', className: 'is-info'}); %>
        <% if(locals.event) {%>
            <div class="message <% if (event.action === 'delete') { %> is-danger <% } else { %> is-success <% } %>">
                <p class="message-body"><%= event.message %></p>
            </div>
        <% } %>
        <table class="table">
            <thead>
                <th>Id</th>
                <th>Nom</th>
                <th>Disponibilité</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% for(const product of products) { %>
                <tr>
                    <td><%= product.id %></td>
                    <td><%= product.name %></td>
                    <td>
                        <input data-product-id="<%= product.id %>" class="switch" name="isAvailable" id="is-available-<%= product.id%>" type="checkbox" <% if(product.isAvailable) { %> checked <% } %>>
                        <label for="is-available-<%= product.id%>"><% if(product.isAvailable) { %> Disponible <% } else { %> Non disponible  <% } %></label>
                    </td>
                    <td>
                        <%- include('../components/btn_link', {link: `products/${product.id}/detail`, title: 'Voir le détail', icon: 'mdi-eye-outline', className: 'is-info'}); %> 

                        <%- include('../components/btn_link', {link: `products/${product.id}/edit`, title: 'Editer', icon: 'mdi-pencil', className: 'is-success'}); %>

                        <button class="button is-danger" data-link="/admin/products/<%= product.id %>/delete">
                            <span class="icon-text">
                                <span class="icon">
                                    <i class="mdi mdi-delete"></i>
                                </span>
                                <span>Supprimer</span>
                            </span>
                        </button>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </main>
    <div class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div class="box">
                <p>Voulez-vous vraiment supprimer?</p>
                <a href="#" class="button is-danger">Supprimer</a>
                <button class="button is-info">Annuler</button>
            </div>
        </div>
    </div>
    <script src="/js/deleteAction.js"></script>
    <script src="/js/checkAvailability.js"></script>
</body>
</html>