<%- include('../../partials/header'); %>

<body class="container">
<%- include('../../partials/aside') %>
<main class="content">
    <h1>Plan de la cueillette</h1>
    <table>
        <thead>
            <tr>
                <th>Parcelle</th>
                <th>Produits</th>
            </tr>
        </thead>
        <tbody>
        <% for(const plot of plots) { %>
            <tr data-row-plot="<%= plot.id %>">
                <td><%= plot.name ;%></td>
                <td>
                    <div class="field is-grouped is-grouped-multiline">
                        <% for(const product of plot.products) { %>
                            <div class="control">
                                <div class="tags has-addons">
                                    <span class="tag is-info is-medium"><%= product.name ;%></span>
                                    <a data-product-id="<%= product.id %>" data-plot-id="<%= plot.id %>" class="tag is-delete is-danger is-light is-medium"></a>
                                </div>
                            </div>
                        <% } %>
                        <div class="control add-tag" data-plot-id="<%= plot.id %>">
                            <div class="tags has-addons">
                                <span class="tag is-success is-medium">Ajouter</span>
                                <span class="tag is-medium mdi mdi-plus is-success is-light"></span>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
</main>
<section class="modal" id="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Le produit à ajouter</p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <form action="#" id="form-modal">
                <div class="field">
                    <label class="label" for="product">Le produit à ajouter :</label>
                    <div class="control">
                        <select class="select" name="productId" id="productId"></select>
                    </div>
                </div>
                <input type="hidden" name="plotId" id="plotId">
                <div class="field is-grouped">
                    <div class="control">
                        <button type="submit" class="button is-link">Submit</button>
                    </div>
                    <div class="control">
                        <button type="reset" class="button is-link is-light">Cancel</button>
                    </div>
                </div>
            </form>
        </section>
        <input type="hidden" name="plotId" id="plotId">
    </div>
</section>
<script src="/js/productInPlot.js"></script>
</body>
</html>