<%- include('../partials/header'); %>

<body class="container">
    <%- include('../partials/aside') %>
    <main class="content">
        <h1>Detail d'une variété</h1>
        <form action="#">
            <div class="field">
                <label class="label">Nom</label>
                <div class="control">
                    <input class="input" name="name" type="text" placeholder="Nom de la variété" value="<%= variety.name %>" disabled>
                </div>
            </div>
            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                    <textarea class="textarea" name="description" id="description" cols="30" rows="10" placeholder="Description de la variété" disabled><%= variety.description %></textarea>
                </div>
            </div>
            <%- include('../components/harvest_date_picker/edit', { element: variety, action: 'detail' }) %>
            <div class="field">
                <label for="product" class="label">Produit :</label>
                <select name="productId" id="product" class="select" disabled>
                    <% for (const product of products) { %>
                        <option value="<%= product.id %>" <% if (product.id === variety.product.id) { %> selected <% } %>><%= product.name %></option>
                    <% } %>
                </select>
            </div>
            <%- include('../components/btn_form', {domain: 'varieties', element: variety}) %>
        </form>
    </main>
    <div class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <div class="box">
                <p>Voulez-vous vraiment supprimer?</p>
                <a href="#" class="button is-danger">Supprimer</a>
                <button class="button is-info">Annuler</button>
            </div>
        </div>
    </div>
    <script src="/js/deleteAction.js"></script>
</body>
</html>