<div class="form-attribute form-attribute--column">
    <label for="<%= property.key %>" class="label"><%= property.name %></label>
    <textarea
        name="<%= property.key %>" 
        id="<%= property.key %>" 
        cols="30" rows="10" 
        <% if(locals.entity){ %> 
            value="<%= entity[property.key] %>" 
        <% }%>
        <% if(property.form.disabled || locals.action === 'detail') { %> disabled  <% } %>
    ><% if(locals.entity){ %><%= entity[property.key] %><% }%></textarea>
</div> 